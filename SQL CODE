CREATE TABLE users (
    id          INT UNSIGNED AUTO_INCREMENT PRIMARY KEY,
    email       VARCHAR(255) NOT NULL UNIQUE,
    password    VARCHAR(255) NOT NULL,           -- เก็บ hashed password (password_hash)
    first_name  VARCHAR(100) NOT NULL,
    last_name   VARCHAR(100) NOT NULL,
    gender      ENUM('male', 'female', 'other') NOT NULL,
    birthdate   DATE NOT NULL,
    phone       VARCHAR(20),
    profile_img VARCHAR(255),                    -- path รูปโปรไฟล์
    created_at  TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    updated_at  TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP
);

//-----------------------------------------------------------------------------------------------------



CREATE TABLE events (
    id          INT UNSIGNED AUTO_INCREMENT PRIMARY KEY,
    user_id     INT UNSIGNED NOT NULL,              -- ผู้สร้างกิจกรรม
    title       VARCHAR(255) NOT NULL,              -- ชื่อกิจกรรม
    description TEXT NOT NULL,                      -- รายละเอียด
    location    VARCHAR(255) NOT NULL,              -- สถานที่
    max_participants INT UNSIGNED NOT NULL,         -- จำนวนคนที่รับ
    start_date  DATETIME NOT NULL,                  -- วันเริ่มต้น
    end_date    DATETIME NOT NULL,                  -- วันสิ้นสุด
    created_at  TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    updated_at  TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
    FOREIGN KEY (user_id) REFERENCES users(id) ON DELETE CASCADE
);

-- รูปภาพกิจกรรม (1 กิจกรรม มีได้หลายรูป)
CREATE TABLE event_images (
    id       INT UNSIGNED AUTO_INCREMENT PRIMARY KEY,
    event_id INT UNSIGNED NOT NULL,
    path     VARCHAR(255) NOT NULL,
    FOREIGN KEY (event_id) REFERENCES events(id) ON DELETE CASCADE
);
-- ตารางเก็บข้อมูลการลงทะเบียนเข้าร่วมกิจกรรม (หัวใจของข้อ 3.2 - 3.3)
CREATE TABLE registrations (
    id          INT UNSIGNED AUTO_INCREMENT PRIMARY KEY,
    event_id    INT UNSIGNED NOT NULL,              -- รหัสกิจกรรม
    user_id     INT UNSIGNED NOT NULL,              -- รหัสผู้สมัคร (ผู้เข้าร่วม)
    
    -- เก็บสถานะการสมัคร (Pending=รออนุมัติ, Approved=อนุมัติ, Rejected=ปฏิเสธ) 
    status      ENUM('pending', 'approved', 'rejected') DEFAULT 'pending', 
    
    -- สำหรับเช็คชื่อว่ามางานจริงๆ หรือยัง (ใช้คู่กับระบบ OTP) [cite: 47, 50]
    otp_code (VARCHAR 6)
    otp_expires_at (DATETIME)
    is_checked_in TINYINT(1) DEFAULT 0,             -- 0 = ยังไม่มา, 1 = เข้าร่วมงานแล้ว
    
    remark      TEXT,                               -- (เพิ่มเติม) เหตุผลการปฏิเสธ หรือหมายเหตุอื่นๆ
    created_at  TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    updated_at  TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,

    -- เชื่อมความสัมพันธ์กับตารางอื่น
    FOREIGN KEY (event_id) REFERENCES events(id) ON DELETE CASCADE,
    FOREIGN KEY (user_id) REFERENCES users(id) ON DELETE CASCADE
);

ALTER TABLE registrations 
ADD COLUMN otp_code VARCHAR(6) NULL AFTER status,
ADD COLUMN otp_expires_at DATETIME NULL AFTER otp_code;
